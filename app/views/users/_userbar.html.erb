<div id="user_nav">
  <% if current_user %>
    Hi, <%= link_to current_user.username, user_path(current_user) %><br />
    <%= link_to "Edit Profile", edit_user_path(current_user) %> |
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Register", new_user_path %> |
    <%= link_to "Login", login_path %>
  <% end %>
</div>