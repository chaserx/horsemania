<% title "Location" %>

<p>
  <strong>Title:</strong>
  <%=h @location.title %>
</p>
<p>
  <strong>Desc:</strong>
  <%=h @location.desc %>
</p>
<p>
  <strong>Lat:</strong>
  <%=h @location.lat %>
</p>
<p>
  <strong>Lon:</strong>
  <%=h @location.lon %>
</p>
<p>
  <strong>Artist:</strong>
  <%=h @location.artist %>
</p>
<p>
  <strong>Artist Location:</strong>
  <%=h @location.artist_location %>
</p>
<p>
  <strong>Sponsor:</strong>
  <%=h @location.sponsor %>
</p>
<p>
  <strong>Photos:</strong>
  <ul>
  <% @location.photos.each do |photo| %>
    <li>
      <p><em>Posted by: <%= photo.user.username %></em></p>
      <%= image_tag photo.upload.url(:medium) %>
    </li>
  <% end %>
  <ul>
</p>

<% if logged_in? %>
<%= render :partial => "add_photo", :locals => { :location => @location,
  :user => current_user } %>
<% else %>
  <p><%= link_to "Sign up", signup_url %> or <%= link_to "log in", login_url %> to post your own photos!</p>
<% end %>

<p>
  <%= link_to "Edit", edit_location_path(@location) %> |
  <%= link_to "Destroy", @location, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", locations_path %>
</p>
